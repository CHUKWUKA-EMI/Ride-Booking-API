{
	"engines": {
		"node": "12.16.2"
	},
	"name": "server",
	"version": "1.0.0",
	"description": "Ride Booking App",
	"main": "src/server.js",
	"scripts": {
		"clean": "rimraf dist/",
		"compile": "babel src/ --out-dir dist/  --copy-files",
		"build": "npm run clean && npm run compile",
		"test": "npm run migrate && jest --detectOpenHandles",
		"start-dev": "nodemon --exec babel-node src/server.js",
		"start": "node dist/server.js",
		"createTable": "sequelize db:migrate",
		"dropTable": "sequelize db:migrate:undo:all",
		"migrate": "npm run dropTable && npm run createTable"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.0",
		"@babel/node": "^7.8.7",
		"@babel/polyfill": "^7.8.7",
		"@sendgrid/mail": "^7.0.1",
		"@types/mailgen": "^2.0.3",
		"@types/randomstring": "^1.1.6",
		"apollo-server": "^2.12.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-graphql": "^0.9.0",
		"express-jwt": "^5.3.3",
		"graphql": "^15.0.0",
		"jsonwebtoken": "^8.5.1",
		"mailgen": "^2.0.10",
		"mongoose": "^5.9.7",
		"mysql2": "^2.1.0",
		"nodemailer": "^6.4.6",
		"nodemailer-sendgrid": "^1.0.3",
		"pg": "^8.0.3",
		"pg-hstore": "^2.3.3",
		"randomstring": "^1.1.5",
		"rimraf": "^3.0.2",
		"sequelize": "^5.21.6",
		"sequelize-cli": "^5.5.1"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.9.5",
		"axios": "^0.19.2",
		"babel-jest": "^25.4.0",
		"chai": "^4.2.0",
		"jest": "^25.4.0",
		"nodemon": "^2.0.3",
		"supertest": "^4.0.2"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			]
		]
	}
}
